<%= form_for(@friend) do |f| %>
  <% if @friend.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@friend.errors.count, "error") %> prohibited this friend from being saved:</h2>

      <ul>
      <% @friend.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="form_row">
  <p>Gender:</p>
  <% [ 'Male', 'Female', 'I decline gender stereotypes'].each do |gender| %>
    <br><%= radio_button_tag 'gender', gender, @gender == gender %>
    <%= label_tag "gender_#{gender}", gender.humanize %>
  <% end %>
</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
